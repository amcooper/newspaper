<h2 class="text-center"><%= @article.headline %></h2>
<h3><%= @article.byline %></h3>
<img src="<%= @article.photo_url %>" class="img-circle">
<br />
<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#articleContent" aria-expanded="false" aria-controls="articleContent">
  Show article
</button>
<div class="collapse" id="articleContent">
  <div class="well">
	<p><%= @article.content %></p>
  </div>
</div>
<div>
	<%= link_to "Edit", edit_article_path(@article) %>
	<%= link_to "Back", articles_path %>
</div>